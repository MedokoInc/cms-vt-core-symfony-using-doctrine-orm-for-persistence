{% extends 'base.html.twig' %}

{% block title %}Quote{% endblock %}

{% block body %}
    <h1>Quote</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Movie</th>
            <td>{{ quote.movie.name }}</td>
        </tr>
        <tr>
            <th>Release</th>
            <td>{{ quote.movie.release |date('d.m.Y') }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ quote.id }}</td>
        </tr>
        <tr>
            <th>Text</th>
            <td>{{ quote.text }}</td>
        </tr>
        <tr>
            <th>Character</th>
            <td>{{ quote.character }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_quote_index') }}">back to list</a>

    <a href="{{ path('app_quote_edit', {'id': quote.id}) }}">edit</a>

    {{ include('quote/_delete_form.html.twig') }}
{% endblock %}
