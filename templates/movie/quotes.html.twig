{% extends 'base.html.twig' %}

{% block title %}All Quotes{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Quotes</h1>

    {% for quote in quotes|sort((a, b) => a.movie.name <=> b.movie.name) %}
        <h3>{{ quote.movie.name }}</h3>
        <p>{{ quote.movie.release |date('Y-m-d')}}</p>
        <p>{{ quote.text }}</p>
        <p>{{ quote.character }}</p>

        <input type="button" onclick="location.href='{{ path('/quote/delete', {'id': quote.id}, true) }}';" value="Edit" />
    {% endfor %}
</div>
{% endblock %}