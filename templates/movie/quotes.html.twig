{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Movie</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ movie.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ movie.name }}</td>
        </tr>
        <tr>
            <th>Release</th>
            <td>{{ movie.release ? movie.release|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <table>
        {% for quote in movie.quotes %}
            <tr>
                <td>{{ quote.id }}</td>
                <td><a href="{{ path('app_quote_show', {'id': quote.id}) }}"> {{ quote.text }}</a></td>
                <td>{{ quote.character }}</td>
            </tr>
        {% endfor %}
    </table>


    <a href="{{ path('app_movie_index') }}">back to list</a>

    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}">edit</a>

    {{ include('movie/_delete_form.html.twig') }}
{% endblock %}
